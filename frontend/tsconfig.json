{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"]
}
